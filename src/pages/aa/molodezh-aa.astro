---
import { getCollection } from "astro:content";
import { vars } from "@js/vars";
import Layout from '@layouts/Layout.astro';


const allPosts = await getCollection("young-people");
---

<Layout
 title="Молодежь АА"
 desc="Когда мы пришли в АА, нам все казалось, что мы слишком молоды, чтобы быть алкоголиками. Некоторые из нас не так уж долго пили. Другие не пили крепких напитков. Третьи никогда не валились с ног и не имели провалов памяти."
 poster="posters/poster-young.png"
>
 <div class={vars.container}>
  <h3 class="mb-[20px] font-bold text-[32px] leading-[110%]">Моложедь в АА 🔥</h3>
  <div
   style="display: grid"
   class="items-start grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-[20px]"
  >
   {
    allPosts.map((item) => (
     <article class="bg-white p-[15px] rounded-[15px]">
      <img src={"../../" + item.data.img} alt="Молодежь АА" class="mb-[10px] rounded-[15px]" />
      <h2 class="text-[20px] font-medium mb-[10px] leading-[120%]">
       💫 {item.data.title}
      </h2>
      <p class="font-light mb-[14px] leading-[130%] ">{item.data.desc}</p>
      <a
       href={"/aa/young-people/" + item.slug}
       class="text-white bg-red-400 hover:bg-red-500 rounded-[8px] py-[4px] px-[12px]"
      >
       Читать
      </a>
     </article>
    ))
   }
  </div>
 </div>
 <style>
  p {
   display: -webkit-box;
   -webkit-line-clamp: 2;
   -webkit-box-orient: vertical;
   overflow: hidden;
  }
 </style>
</Layout>
