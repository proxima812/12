---
// следущие посты в посте
const { prevPost, nextPost, link } = Astro.props;
---

<hr class="bg-[#aaa] h-[1px] mt-[40px] mb-[20px]" />
<div class="flex flex-wrap md:flex-nowrap gap-[10px] justify-between">
 <div class="hover:bg-white rounded-[10px] p-[0px] md:py-[10px] md:px-[15px]">
  {
   nextPost.data && (
    <>
     <a href={`/aa/${link}/${nextPost.slug}/`} class="flex flex-col gap-[5px]">
      <span class="text-left">Предыдущий</span>
      <span class="text-[18px] md:text-[22px] leading-[110%] font-bold">
       {" "}
       {nextPost.data.title}
      </span>
     </a>
    </>
   )
  }
 </div>
 <div
  class="hover:bg-white rounded-[10px] p-[0px] md:py-[10px] md:px-[15px]"
 >
  {
   prevPost.data && (
    <>
     <a
      href={`/aa/${link}/${prevPost.slug}/`}
      class="flex flex-col gap-[5px] text-left lg:text-right"
     >
      <span class="text-left lg:text-right">Следущий</span>
      <span class="text-[18px] md:text-[22px] leading-[110%] font-bold">
       {prevPost.data.title}
      </span>
     </a>
    </>
   )
  }
 </div>
</div>
